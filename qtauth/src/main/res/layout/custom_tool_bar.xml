<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_tool_bar_ll_main_container"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="@dimen/size_8dp"
    android:outlineSpotShadowColor="@color/trending_text_color"
    android:visibility="visible">

    <ImageView
        android:id="@+id/custom_tool_bar_iv_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="@dimen/size_8dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/size_8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_left_arrow" />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/custom_tool_bar_tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="@dimen/size_8dp"
        android:paddingEnd="@dimen/size_4dp"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:fontFamily="@font/default_font"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="?attr/size_16sp" />

    <ImageView
        android:id="@+id/custom_tool_bar_iv_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/size_8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_share" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/custom_tool_bar_notification_toggle_switch"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp"
        android:padding="@dimen/size_6dp"
        android:layout_gravity="center"
        app:theme="@style/ToggleSwitchStyle" />
</LinearLayout>